/* pages/ai/ai.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

/* 聊天区域 */
.chat-container {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 0;
}

/* 欢迎消息 */
.welcome-message {
  padding: 40rpx 20rpx;
  text-align: center;
}

.welcome-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.ai-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
}

.welcome-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}

.feature-list {
  margin-bottom: 30rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.feature-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333333;
}

.welcome-tip {
  display: block;
  font-size: 26rpx;
  color: #999999;
  font-style: italic;
}

/* 消息列表 */
.message-list {
  padding-bottom: 20rpx;
}

.message-item {
  margin-bottom: 30rpx;
}

.message-content {
  display: flex;
  align-items: flex-start;
  max-width: 100%;
}

.message-content.user-message {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0 20rpx;
  flex-shrink: 0;
}

.message-bubble {
  max-width: 70%;
  padding: 24rpx;
  border-radius: 20rpx;
  position: relative;
  word-wrap: break-word;
}

.ai-bubble {
  background: #ffffff;
  color: #333333;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-bubble {
  background: #3cc51f;
  color: #ffffff;
}

.system-bubble {
  background: #f0f0f0;
  color: #666666;
  text-align: center;
  margin: 20rpx auto;
  max-width: 80%;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
}

.message-time {
  font-size: 22rpx;
  color: #999999;
  margin-top: 10rpx;
  display: block;
}

.user-bubble .message-time {
  color: rgba(255, 255, 255, 0.8);
}

.message-image {
  width: 100%;
  max-width: 400rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

/* 输入中提示 */
.typing-indicator {
  margin-bottom: 30rpx;
}

.typing-dots {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #cccccc;
  border-radius: 50%;
  animation: typing 1.4s infinite ease-in-out;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes typing {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 快捷功能 */
.quick-actions {
  background: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx;
}

.action-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.action-item {
  flex: 1;
  min-width: 160rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  border: 1rpx solid #e5e5e5;
}

.action-item:active {
  background: #e9ecef;
}

.action-icon {
  display: block;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333333;
}

/* 输入区域 */
.input-container {
  background: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
  gap: 20rpx;
}

.function-buttons {
  display: flex;
  gap: 10rpx;
}

.function-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 30rpx;
  border: 1rpx solid #e5e5e5;
}

.function-btn image {
  width: 32rpx;
  height: 32rpx;
}

.function-btn:active {
  background: #e9ecef;
}

.input-field-wrapper {
  flex: 1;
  position: relative;
}

.input-field {
  width: 100%;
  min-height: 60rpx;
  max-height: 120rpx;
  background: #f8f9fa;
  border: 1rpx solid #e5e5e5;
  border-radius: 30rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  line-height: 1.4;
  resize: none;
}

.input-field:focus {
  border-color: #3cc51f;
  background: #ffffff;
}

.input-counter {
  position: absolute;
  bottom: -30rpx;
  right: 0;
}

.counter-text {
  font-size: 22rpx;
  color: #999999;
}

.send-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #cccccc;
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.send-btn.active {
  background: #3cc51f;
}

.send-btn image {
  width: 32rpx;
  height: 32rpx;
}

/* 会员提示 */
.member-tip {
  position: fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  z-index: 1000;
}

.tip-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.tip-text {
  font-size: 26rpx;
}

.btn-small {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
}

/* 加载提示 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3cc51f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333333;
}
