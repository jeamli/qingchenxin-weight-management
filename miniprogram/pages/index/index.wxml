<view class="container">
  <view class="card">
    <text class="title">欢迎使用体重管理数字医生</text>
    <view class="overview">
      <view class="item" wx:for="{{overview}}" wx:key="label">
        <text class="label">{{item.label}}</text>
        <text class="value">{{item.value}}</text>
      </view>
    </view>
  </view>
  <view class="card">
    <text class="subtitle">快捷入口</text>
    <view class="quick">
      <button class="btn" data-url="/pages/ai/ai" bindtap="nav">AI对话</button>
      <button class="btn" data-url="/pages/data/data?tab=weight" bindtap="nav">记录体重</button>
      <button class="btn" data-url="/pages/data/data?tab=diet" bindtap="nav">记录饮食</button>
      <button class="btn" data-url="/pages/data/data?tab=exercise" bindtap="nav">记录运动</button>
    </view>
  </view>
</view>