<view class="container">
  <view class="weight-overview">
    <text class="title">体重概览</text>
    <view class="grid">
      <view class="item">
        <text class="label">今日体重</text>
        <text class="value">{{todayStats.weight}}</text>
      </view>
      <view class="item">
        <text class="label">饮食记录</text>
        <text class="value">{{todayStats.calories}}</text>
      </view>
      <view class="item">
        <text class="label">运动记录</text>
        <text class="value">{{todayStats.exerciseTime}}</text>
      </view>
    </view>
  </view>

  <view class="quick">
    <text class="title">快捷入口</text>
    <view class="qa">
      <block wx:for="{{quickActions}}" wx:key="text">
        <view class="qitem" bindtap="go" data-url="{{item.url}}">
          <image class="qicon" src="{{item.icon}}" />
          <text class="qtext">{{item.text}}</text>
        </view>
      </block>
    </view>
  </view>

  <view class="advisor-card">
    <text class="title">健康顾问</text>
    <text class="desc">尚未关联健康顾问</text>
  </view>
</view>