<view class="container">
  <view class="card header">
    <image class="avatar" src="{{userInfo.avatar||'/images/default-avatar.png'}}"/>
    <view class="meta">
      <text class="hello">你好</text>
      <text class="name">{{userInfo.nickname||'未设置昵称'}}</text>
    </view>
  </view>

  <view class="card overview">
    <view class="o-grid">
      <block wx:for="{{overview}}" wx:key="label">
        <view class="o-item">
          <text class="o-label">{{item.label}}</text>
          <text class="o-value">{{item.value}}</text>
        </view>
      </block>
    </view>
  </view>

  <view class="card quick">
    <text class="section-title">快捷入口</text>
    <view class="q-grid">
      <block wx:for="{{quick}}" wx:key="text">
        <view class="q-item" bindtap="nav" data-url="{{item.url}}">
          <image class="q-icon" src="{{item.icon}}"/>
          <text class="q-text">{{item.text}}</text>
        </view>
      </block>
    </view>
  </view>
</view>