.container { padding: 24rpx; }
.title { font-size: 32rpx; font-weight: bold; color: #333; margin: 24rpx 0; }
.grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 16rpx; }
.item { background: #f8f9fa; border: 1rpx solid #e5e5e5; border-radius: 12rpx; padding: 20rpx; text-align: center; }
.label { display: block; font-size: 24rpx; color: #666; }
.value { display: block; font-size: 32rpx; color: #3cc51f; margin-top: 8rpx; }
.quick .qa { display: grid; grid-template-columns: repeat(4, 1fr); gap: 16rpx; }
.qitem { background: #fff; border: 1rpx solid #e5e5e5; border-radius: 12rpx; padding: 20rpx; text-align: center; }
.qitem:active { background: #f2f2f2; }
.qicon { width: 56rpx; height: 56rpx; }
.qtext { display: block; margin-top: 8rpx; font-size: 24rpx; color: #333; }
.advisor-card { margin-top: 24rpx; background: #fff; border-radius: 12rpx; border: 1rpx solid #e5e5e5; padding: 20rpx; }
.desc { display: block; color: #999; font-size: 24rpx; }