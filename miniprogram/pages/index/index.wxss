.container{padding:24rpx;background:#f8f8f8;min-height:100vh}
.card{background:#fff;border:1rpx solid #e5e7eb;border-radius:16rpx;padding:20rpx;margin-bottom:16rpx}
.title{display:block;font-size:32rpx;font-weight:600;color:#101828;margin-bottom:12rpx}
.subtitle{display:block;font-size:28rpx;font-weight:600;color:#101828;margin-bottom:12rpx}
.overview{display:flex;gap:12rpx}
.item{flex:1;background:#f9fafb;border:1rpx solid #e5e7eb;border-radius:12rpx;padding:16rpx}
.label{display:block;color:#667085;font-size:24rpx}
.value{display:block;color:#101828;font-size:28rpx;margin-top:6rpx}
.quick{display:grid;grid-template-columns:repeat(2,1fr);gap:12rpx}
.btn{background:#22c55e;color:#fff;border-radius:10rpx}