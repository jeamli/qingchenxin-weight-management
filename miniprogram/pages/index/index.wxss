.container{padding:24rpx;background:#f8f8f8;min-height:100vh}
.card{background:#fff;border:1rpx solid #e5e7eb;border-radius:16rpx;padding:24rpx;margin-bottom:20rpx;box-shadow:0 2rpx 8rpx rgba(16,24,40,.04)}
.header{display:flex;align-items:center;gap:16rpx}
.avatar{width:96rpx;height:96rpx;border-radius:48rpx;border:2rpx solid #f2f4f7}
.hello{display:block;color:#667085;font-size:24rpx}
.name{display:block;color:#101828;font-weight:600;font-size:32rpx}
.o-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:12rpx}
.o-item{background:#f9fafb;border:1rpx solid #e5e7eb;border-radius:12rpx;text-align:center;padding:20rpx}
.o-label{display:block;color:#667085;font-size:24rpx}
.o-value{display:block;color:#22c55e;font-size:32rpx;font-weight:600;margin-top:6rpx}
.section-title{display:block;color:#101828;font-size:28rpx;font-weight:600;margin-bottom:12rpx}
.q-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:12rpx}
.q-item{background:#fff;border:1rpx solid #e5e7eb;border-radius:12rpx;text-align:center;padding:16rpx}
.q-item:active{background:#f2f4f7}
.q-icon{width:48rpx;height:48rpx}
.q-text{display:block;margin-top:8rpx;color:#344054;font-size:24rpx}