.container{padding:24rpx}
.tabs{display:grid;grid-template-columns:repeat(4,1fr);gap:8rpx;margin-bottom:16rpx}
.tab{text-align:center;padding:16rpx;border:1rpx solid #e5e7eb;border-radius:10rpx;color:#344054;background:#fff}
.tab.active{background:#22c55e;color:#fff;border-color:#22c55e}
.panel{background:#fff;border:1rpx solid #e5e7eb;border-radius:12rpx;padding:24rpx;color:#667085}