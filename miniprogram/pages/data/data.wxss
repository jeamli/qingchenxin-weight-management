.container { padding: 24rpx; }
.tabs { display: grid; grid-template-columns: repeat(4, 1fr); gap: 12rpx; margin-bottom: 16rpx; }
.tab { text-align: center; padding: 16rpx 8rpx; border: 1rpx solid #e5e5e5; border-radius: 8rpx; background: #fff; color: #333; }
.tab.active { background: #3cc51f; color: #fff; border-color: #3cc51f; }
.panel { background: #fff; border: 1rpx solid #e5e5e5; border-radius: 12rpx; padding: 24rpx; color: #666; }