.container{display:flex;flex-direction:column;height:100vh;background:#f8f8f8}
.chat{flex:1;padding:24rpx}
.msg{display:flex;margin-bottom:12rpx}
.msg.left{justify-content:flex-start}
.msg.right{justify-content:flex-end}
.bubble{max-width:70%;padding:16rpx 20rpx;border-radius:16rpx;background:#fff;border:1rpx solid #e5e7eb;color:#101828}
.msg.right .bubble{background:#22c55e;color:#fff;border-color:#22c55e}
.inputbar{display:flex;gap:12rpx;padding:12rpx;border-top:1rpx solid #e5e7eb;background:#fff}
.input{flex:1;border:1rpx solid #e5e7eb;border-radius:10rpx;padding:12rpx;background:#f9fafb}
.send{background:#22c55e;color:#fff;border-radius:10rpx;padding:0 20rpx}