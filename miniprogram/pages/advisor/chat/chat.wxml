<view class="container">
  <scroll-view class="chat" scroll-y>
    <block wx:for="{{messages}}" wx:key="id">
      <view class="msg {{item.sender==='advisor'?'right':'left'}}">
        <view class="bubble">{{item.content}}</view>
      </view>
    </block>
  </scroll-view>
  <view class="inputbar">
    <textarea class="input" placeholder="回复患者..." value="{{inputText}}" bindinput="onInput" auto-height/>
    <button class="send" bindtap="send">发送</button>
  </view>
</view>