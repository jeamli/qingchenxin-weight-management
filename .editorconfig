# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# 4 space indentation for Python files
[*.py]
indent_size = 4

# 4 space indentation for Java files
[*.java]
indent_size = 4

# 4 space indentation for C/C++ files
[*.{c,cpp,h,hpp}]
indent_size = 4

# 2 space indentation for JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# 2 space indentation for JSON files
[*.json]
indent_size = 2

# 2 space indentation for HTML/CSS files
[*.{html,css,scss,sass}]
indent_size = 2

# 2 space indentation for Markdown files
[*.md]
trim_trailing_whitespace = false


